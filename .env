# ========== LOGGING CONFIGURATION ==========
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable/disable request logging (true/false)
ENABLE_REQUEST_LOGGING=true

# ========== API CONFIGURATION ==========
# API version
API_VERSION=v1

# Maximum file upload size (in MB)
MAX_FILE_SIZE=10

# ========== DEVELOPMENT SETTINGS ==========
# Show stack traces in error responses (development only)
SHOW_STACK_TRACES=true

# Enable detailed mongoose debugging (true/false)
MONGOOSE_DEBUG=false

# ========== PERFORMANCE MONITORING ==========
# Enable performance monitoring (true/false)
ENABLE_PERFORMANCE_MONITORING=true

# ========== HEALTH CHECK ==========
# Health check endpoint path
HEALTH_CHECK_PATH=/health

# ========== SWAGGER DOCUMENTATION ==========
# Swagger documentation endpoint
SWAGGER_PATH=/api-docs

# Enable Swagger UI in production (true/false)
ENABLE_SWAGGER_IN_PRODUCTION=false